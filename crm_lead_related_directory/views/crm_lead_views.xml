<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="crm_lead_view_form" model="ir.ui.view">
        <field name="model">crm.lead</field>
        <field name="inherit_id" ref="crm.crm_lead_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//sheet" position="inside">
                <field name="related_directory_id" invisible="1"/>
            </xpath>
            <button name="action_set_lost" position="after">
                <button name="create_directory" string="Create directory" type="object"
                attrs="{'invisible': [('related_directory_id', '!=', False)]}"/>
            </button>
            <div name="button_box" position="inside">
                <button class="oe_stat_button" name="related_directory_link" type="object" icon="fa-folder-open-o"
                string="Directories" attrs="{'invisible': [('related_directory_id', '=', False)]}">
                    <field name="related_directory_id" invisible="1"/>
                </button>
            </div>
        </field>
    </record>
</odoo>
