<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="crm_lead_stage_tree" model="ir.ui.view">
        <field name="name">crm.lead.stage.tree</field>
        <field name="model">crm.lead.stage</field>
        <field name="arch" type="xml">
            <tree string="Etapas de iniciativas" multi_edit="1">
                <field name="sequence" widget="handle" />
                <field name="name" />
            </tree>
        </field>
    </record>
    <record id="crm_lead_stage_form" model="ir.ui.view">
        <field name="name">crm.lead.stage.form</field>
        <field name="model">crm.lead.stage</field>
        <field name="arch" type="xml">
            <form string="Etapas de Iniacitivas">
                <sheet>
                    <div class="oe_title">
                        <label for="name"/>
                        <h1>
                            <field name="name"/>
                        </h1>
                    </div>
                    <group name="crm_lead_group_main">
                        <group name="crm_lead_group_left">
                            <field name="sequence"/>
                        </group>
                    </group>
                </sheet>
            </form>            
        </field>
    </record>    
    <record id="crm_lead_stage_action" model="ir.actions.act_window">
        <field name="name">CRM Leads Stages</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">crm.lead.stage</field>
        <field name="view_mode">tree,form</field>
    </record>
    <menuitem id="crm_lead_stage_menu_act" name="Etapas de la iniciativa" parent="crm.menu_crm_config_lead" action="crm_lead_stage_action" sequence="0"/>
</odoo>
