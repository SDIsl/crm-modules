<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="utm_source_view_form" model="ir.ui.view">
        <field name="model">utm.source</field>
        <field name="inherit_id" ref="utm.utm_source_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//group" position="before">
                    <div class="oe_button_box" name="button_box">
                        <button name="toggle_active" type="object" class="oe_stat_button" icon="fa-archive">
                            <field name="active" widget="boolean_button" options='{"terminology": "archive"}'/>
                        </button>
                    </div>
            </xpath>
        </field>
    </record>
    <record id="utm_campaign_form" model="ir.ui.view">
        <field name="model">utm.campaign</field>
        <field name="inherit_id" ref="utm.utm_campaign_form"/>
        <field name="arch" type="xml">
            <xpath expr="//group" position="before">
                    <div class="oe_button_box" name="button_box">
                        <button name="toggle_active" type="object" class="oe_stat_button" icon="fa-archive">
                            <field name="active" widget="boolean_button" options='{"terminology": "archive"}'/>
                        </button>
                    </div>
            </xpath>
        </field>
    </record>
</odoo>
