<?xml version="1.0" encoding="utf-8"?>
<odoo>
<record id="contract_template_form_view" model="ir.ui.view">
    <field name="model">contract.template</field>
    <field name="inherit_id" ref="contract.contract_template_form_view"/>
    <field name="arch" type="xml">
        <xpath expr="//group[@name='group_invoice_lines']" position="after">
            <group name="group_sale_process" string="Additional Information">
                <field name="sale_order_process" nolabel="1"/>
            </group>
            <group name="group_service_level" string="ANNEX I: Characteristics of the service level offered">
                <field name="service_level" nolabel="1"/>
            </group>
            <group name="group_clause" string="ANNEX II: Templates Clausules">
                <field name="contract_clause" nolabel="1"/>
            </group>
        </xpath>
    </field>
</record>
</odoo>
