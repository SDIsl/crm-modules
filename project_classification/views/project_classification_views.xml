<?xml version='1.0' encoding='utf-8'?>
<odoo>
    <record id="project_classification_view_tree" model="ir.ui.view">
        <field name="model">project.classification</field>
        <field name="arch" type="xml">
            <tree>
                <field name="sequence" widget="handle"/>
                <field name="name"/>
                <field name="description"/>
            </tree>
        </field>
    </record>

    <record id="project_classification_view_form" model="ir.ui.view">
        <field name="model">project.classification</field>
        <field name="arch" type="xml">
            <form string="Project Classification">
                <sheet>
                    <label for="name" class="oe_edit_only"/>
                    <h1 class="oe_title">
                        <field name="name"/>
                    </h1>
                    <group>
                        <field name="description"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
</odoo>
