<?xml version='1.0' encoding='utf-8'?>
<odoo>
    <record id="project_analytics_status_time_view_tree" model="ir.ui.view">
        <field name="model">project.analytics.move</field>
        <field name="arch" type="xml">
            <tree create="false">
                <field name="id"/>
                <field name="project_id"/>
                <field name="previous_status_id"/>
                <field name="after_status_id"/>
                <field name="create_date" string="Initial Date"/>
                <field name="end_date" string="End Date"/>
                <field name="time_days" string="Time (days)" sum="Total Time"/>
                <field name="avg_status_time" avg="Avg time/status"/>
                <field name="user_id_ref"/>
            </tree>
        </field>
    </record>
    <record id="project_analytics_move_action" model="ir.actions.act_window">
        <field name="name">Project Analytics</field>
        <field name="res_model">project.analytics.move</field>
        <field name="view_mode">tree,pivot</field>
    </record>
    <menuitem id="project_analytics" name="Project Analytics" parent="project.menu_project_report" action="project_analytics_move_action" sequence="8"/>
</odoo>
