<?xml version='1.0' encoding='utf-8'?>
<odoo>
    <record id="edit_project" model="ir.ui.view">
        <field name="model">project.project</field>
        <field name="inherit_id" ref="project.edit_project"/>
        <field name="arch" type="xml">
            <xpath expr="//notebook" position="inside">
                <page name="analytics" string="Analytics" >
                    <group string="Statistics">
                        <field name="actual_time"/>
                    </group>
                    <group string="Movements" groups="project.group_project_manager">
                        <field name="move_ids" nolabel="1" readonly="True">
                            <tree create="false">
                                <field name="previous_status_id"/>
                                <field name="after_status_id"/>
                                <field name="create_date" string="Initial Date"/>
                                <field name="end_date" string="End Date"/>
                                <field name="time_days" string="Time (days)" sum="Total Time"/>
                                <field name="avg_status_time" avg="Avg time/status"/>
                                <field name="user_id_ref"/>
                            </tree>
                        </field>
                    </group>
                </page>
            </xpath>
        </field>
    </record>
    <record id="view_project_kanban" model="ir.ui.view">
        <field name="model">project.project</field>
        <field name="inherit_id" ref="project.view_project_kanban"/>
        <field name="arch" type="xml">
            <field name="project_status" position="after">
                <t t-if="record.actual_time.raw_value > 0">
                    <field name="actual_time"/> days
                </t>
            </field>
        </field>
    </record>
</odoo>
