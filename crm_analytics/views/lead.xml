<?xml version='1.0' encoding='utf-8'?>
<odoo>
    <record id="crm_case_form_view_oppor" model="ir.ui.view">
        <field name="model">crm.lead</field>
        <field name="inherit_id" ref="sale_crm.crm_case_form_view_oppor"/>
        <field name="arch" type="xml">
            <xpath expr="//notebook" position="inside">
                <page name="analytics" string="Analytics" >
                    <group string="Statistics">
                        <field name="actual_time"/>
                    </group>
                    <group string="Movements" groups="sales_team.group_sale_manager">
                        <field name="move_ids" nolabel="1">
                            <tree>
                                <field name="previous_stage_id"/>
                                <field name="after_stage_id"/>
                                <field name="create_date" string="Initial Date"/>
                                <field name="end_date" string="End Date"/>
                                <field name="time_days" string="Time (days)" sum="Total Time"/>
                                <field name="avg_stage_time" avg="Avg time/stage"/>
                                <field name="user_id_ref"/>
                            </tree>
                        </field>
                    </group>
                </page>
            </xpath>
        </field>
    </record>
    <record id="crm_case_kanban_view_leads" model="ir.ui.view">
        <field name="model">crm.lead</field>
        <field name="inherit_id" ref="crm.crm_case_kanban_view_leads"/>
        <field name="arch" type="xml">
            <xpath expr="//div[hasclass('oe_kanban_bottom_left')]" position="inside">
                <t t-if="record.actual_time.raw_value > 0">
                    <field name="actual_time"/> days
                </t>
            </xpath>
        </field>
    </record>
</odoo>
