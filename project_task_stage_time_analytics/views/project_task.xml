<?xml version='1.0' encoding='utf-8'?>
<odoo>
    <record id="view_task_form2" model="ir.ui.view">
        <field name="model">project.task</field>
        <field name="inherit_id" ref="project.view_task_form2"/>
        <field name="arch" type="xml">
            <xpath expr="//notebook" position="inside">
                <page name="analytics" string="Analytics" >
                    <group string="Statistics">
                        <field name="actual_time"/>
                    </group>
                    <group string="Movements" groups="project.group_project_manager">
                        <field name="move_ids" nolabel="1" readonly="True">
                            <tree create="false">
                                <field name="previous_stage_id"/>
                                <field name="after_stage_id"/>
                                <field name="create_date" string="Initial Date"/>
                                <field name="end_date" string="End Date"/>
                                <field name="time_days" string="Time (days)" sum="Total Time"/>
                                <field name="avg_stage_time" avg="Avg time/stage"/>
                                <field name="user_id_ref"/>
                            </tree>
                        </field>
                    </group>
                </page>
            </xpath>
        </field>
    </record>
    <record id="view_task_kanban" model="ir.ui.view">
        <field name="model">project.task</field>
        <field name="inherit_id" ref="project.view_task_kanban"/>
        <field name="arch" type="xml">
            <xpath expr="//div[hasclass('o_kanban_record_headings')]" position="inside">
                <div>
                    <t t-if="record.actual_time.raw_value > 0">
                        <field name="actual_time"/> days
                    </t>
                </div>
            </xpath>
        </field>
    </record>
</odoo>
