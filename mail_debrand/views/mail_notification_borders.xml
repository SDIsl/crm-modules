<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="mail_notification_light" inherit_id="mail.mail_notification_light">
        <!--Escondo el tr-->
        <xpath expr="//table[@style='padding-top: 16px; background-color: #F1F1F1; font-family:Verdana, Arial,sans-serif; color: #454748; width: 100%; border-collapse:separate;']/tr[2]" position="attributes">
            <attribute name="t-if">False</attribute>
        </xpath>
        <!--Añado el nuevo tr-->
        <xpath expr="//table[@style='padding-top: 16px; background-color: #F1F1F1; font-family:Verdana, Arial,sans-serif; color: #454748; width: 100%; border-collapse:separate;']/tr[2]" position="after">
            <tr>
                <td align="center" style="min-width: 590px;">
                    Mi enlace A <a target="_blank" href="https://www.odoo.com?utm_source=db&amp;utm_medium=email" style="color: #875A7B;">Enlace A</a>
                </td>
            </tr>
        </xpath>
    </template>

    <template id="mail_notification_borders" inherit_id="mail.mail_notification_borders">
        <!--Escondo el td -->
        <xpath expr="//td[@style='padding: 8px; font-size:11px;']" position="attributes">
            <attribute name="t-if">False</attribute>
        </xpath>
        <!--Añado el nuevo tr-->
        <xpath expr="//td[@style='padding: 8px; font-size:11px;']" position="after">
            <td align="center" style="padding: 8px; font-size:11px;">
                Mi enlace B <a target="_blank" href="https://www.odoo.com?utm_source=db&amp;utm_medium=email">Enlace B</a>.
            </td>
        </xpath>
    </template>

    <template id="message_notification_email" inherit_id="mail.message_notification_email">
        <!--Escondo el tr-->
        <xpath expr="//p[@style='color: #555555; margin-top:32px;']" position="attributes">
            <attribute name="t-if">False</attribute>
        </xpath>
        <!--Añado el nuevo tr -->
        <xpath expr="//p[@style='color: #555555; margin-top:32px;']" position="after">
            <p style="color: #555555; margin-top:24px; text-align:center" font-family = "Verdana, Arial,sans-serif;">

                <span t-if="company.name" style="text-align:center">
                <a t-if="website_url" t-att-href="website_url" style="text-decoration:none; text-align:center;">
                    <b><span style="color:#454748" t-esc="company.name"/></b>
                </a>
                </span>
                <hr></hr>
                <font style="color:#999999; font-size:15px; text-decoration:none; text-align:center;">
                    <p>+34 941 13 50 52
                    |
                    <a href="mailto:administracion@hrlog.es" style="text-decoration:none; color:#999999;" >administracion@hrlog.es</a>
                    |
                    <a href="http://www.hrlog.es" style="text-decoration:none; color:#999999;">https://www.hrlog.es</a>
                    </p>
                </font>
            </p>
            <a target="_blank" href="https://www.odoo.com?utm_source=db&amp;utm_medium=email" style="text-decoration:none; color: #875A7B; text-align:center;"></a>.
        </xpath>
    </template>
</odoo>
